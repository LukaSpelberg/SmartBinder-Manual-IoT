<%- include('partials/header') %>

<h1>Light Settings</h1>

<h3>Configure Default lights</h3>
<div class="lights-row">
  <div style="text-align:center">
    <div class="light-circle" style="background:#E94D4D">
      <label class="edit" title="Edit color">
        <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"></path><path d="M16.5 3.5a2.1 2.1 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5z"></path></svg>
        <input type="color" value="#E94D4D">
      </label>
    </div>
    <div style="margin-top:8px">Error</div>
  </div>
  <div style="text-align:center">
    <div class="light-circle" style="background:#FFCA00">
      <label class="edit" title="Edit color">
        <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"></path><path d="M16.5 3.5a2.1 2.1 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5z"></path></svg>
        <input type="color" value="#FFCA00">
      </label>
    </div>
    <div style="margin-top:8px">Rare</div>
  </div>
  <div style="text-align:center">
    <div class="light-circle" style="background:white">
      <label class="edit" title="Edit color">
        <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"></path><path d="M16.5 3.5a2.1 2.1 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5z"></path></svg>
        <input type="color" value="#ffffff">
      </label>
    </div>
    <div style="margin-top:8px">Loading</div>
  </div>
</div>

<div class="slider-row">
  <h4>Configure pulse speed.</h4>
  <input type="range" min="0.5" max="2" step="0.1" value="1">
  <div style="display:flex;justify-content:space-between"><span>x0.5</span><span>x2</span></div>

  <h4 style="margin-top:18px">Brightness Scale</h4>
  <input type="range" min="0" max="100" step="1" value="50">
  <div style="display:flex;justify-content:space-between"><span>0%</span><span>100%</span></div>

  <h4 style="margin-top:18px">Showcase mode</h4>
  <div class="toggle">
    <div id="showcase-toggle" role="button" aria-pressed="false"></div>
    <div style="max-width:520px">Showcase mode adjusts the strength of the LED's dynamically based on the time of the day, adjust the time here if you want it at a set time instead of automatically.</div>
  </div>

  <div style="margin-top:12px">Time:
    <select id="showcase-time" class="styled">
      <!-- options populated by JS -->
    </select>
  </div>
</div>

<%- include('partials/footer') %>
